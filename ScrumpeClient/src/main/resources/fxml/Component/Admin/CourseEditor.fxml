<AnchorPane id="AnchorPane" maxWidth="-Infinity" prefHeight="700.0" prefWidth="600.0" style="-fx-background-color: rgba(0,0,0,0.5);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scrumpe.scrumpeclient.Screen.Component.Admin.CourseEditorController">
